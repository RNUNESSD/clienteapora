<h2>Login</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, label: false, input_html: { placeholder: 'E-mail', class: 'span4' }, :required => false, :autofocus => true %>
    <%= f.input :password, label: false, input_html: { placeholder: 'Senha', class: 'span4' }, :required => false %>
    <%= f.input :remember_me, label: false, hint: 'Lembrar Senha',  :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <%= f.button :submit, "Entrar", class: 'btn-large btn-block btn-primary' %>

<% end %>

<%= render "devise/shared/links" %>
