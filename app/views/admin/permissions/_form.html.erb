<h2>Permissões</h2>

<%= simple_form_for [:admin, resource], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :object_type, :label => 'Módulo', :input_html => { :class => "span6" } %>
  <%= f.input :action_name, collection: Permission::ACTIONS , :label => 'Ação', :input_html => { :class => "span6" } %>
  <%= f.input :description, :label => 'Descrição', :input_html => { :class => "span6" } %>

  <div class="form-actions">
    <%= f.button :submit, 'Salvar', :class => 'btn-primary' %>
  </div>
<% end %>
